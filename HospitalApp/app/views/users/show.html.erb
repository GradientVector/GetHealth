<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
		<section>
			<%= render "shared/stats" %>
		</section>
	</aside>
	<div class="span8">
    <div id='chart'>Loading chart...</div>
    <%= render_chart(@chart, 'chart') %>
    <div>
		<% if signed_in? %>
      <h3>Enter new cholesterol measurement</h3>
			<%= form_tag(add_cholesterol_measurement_path(@user.id), :method => "get") do %>
				<%= label_tag :hdl, "HDL" %>
				<%= text_field_tag :hdl %>
				<%= label_tag :ldl, "LDL" %>
				<%= text_field_tag :ldl %>
				<%= label_tag :total %>
				<%= text_field_tag :total %>
				<%= label_tag :triglyceride %>
				<%= text_field_tag :triglyceride %>
				<%= submit_tag "Add Measurement", class: "btn btn-large btn-primary" %>
			<% end %>
			<%= link_to "Sync", sync_user_path(@user.id), data: { confirm: "Are you sure?" }, class: "btn btn-large btn-success" %>
		<% end %>
    </div>
	</div>
</div>